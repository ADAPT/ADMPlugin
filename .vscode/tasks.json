{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ADAPT.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
              "kind": "build",
              "isDefault": true
            }
        },
        {
            "label": "test",
            "dependsOn": [
              "test-plugin",
              "test-utilities"
            ],
            "group": {
              "kind": "test",
              "isDefault": true
            }
        },
        {
            "label": "test-plugin",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/source/PluginTest/PluginTest.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test-utilities",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/source/TestUtilities/TestUtilities.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
